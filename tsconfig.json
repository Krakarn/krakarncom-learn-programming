{
    "compilerOptions": {
        "strict": true,
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "baseUrl": ".",
        "paths": {
            "@components": ["src/components"],
            "@components/*": ["src/components/*"],
            "@lib": ["src/lib"],
            "@lib/*": ["src/lib/*"],
            "@content": ["src/content"],
            "@content/*": ["src/content/*"]
        }
    },
}